
@{
    Layout = "~/Views/Shared/Login.cshtml";
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div class="row">
    <form action="@Url.Content("~/Acceso/Login")" method="post">
        <div class="form-group">
            <label>Usuario</label>
            <input type="email" name="usuario" />
        </div>
        <div class="form-group">
            <label>Contraseña</label>
            <input type="password" name="pass" />
        </div>
        <div class="form-group">
            <input type="submit" name="btnEnviar" class="btn-success" value="Ingresar" />
        </div>
    </form>
</div>